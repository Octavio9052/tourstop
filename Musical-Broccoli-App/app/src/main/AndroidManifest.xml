<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cetys.dreamteam.musicalbroccoli">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".TourStopApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.views.activities.UserProfileActivity" />
        <activity android:name=".presentation.views.activities.SearchActivity" />
        <activity
            android:name=".presentation.views.activities.LoginActivity"
            android:label="@string/action_sign_in" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.views.activities.CreateTourActivity" />
        <activity android:name=".presentation.views.activities.EditUserActivity" />
        <activity android:name=".presentation.views.activities.ChangePasswordActivity" />
        <activity android:name=".presentation.views.activities.MessagesActivity" />
        <activity android:name=".presentation.views.activities.MyToursActivity" />
        <activity android:name=".presentation.views.activities.WishlistActivity" />
        <activity android:name=".presentation.views.activities.CheckpointActivity"/>
        <activity android:name=".presentation.views.activities.PaymentOptionsActivity"/>
        <activity android:name=".presentation.views.activities.CardPaymentActivity"/>
        <activity android:name=".presentation.views.activities.TourProfileActivity"/>
    </application>

</manifest>