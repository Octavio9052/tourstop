<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cetys.dreamteam.musicalbroccoli">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".presentation.views.activities.TourStopApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.views.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".presentation.views.activities.UserProfileActivity" />
        <activity android:name=".presentation.views.activities.SearchActivity" />
        <activity
            android:name=".presentation.views.activities.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".presentation.views.activities.TourProfileActivity" />
        <activity android:name=".presentation.views.activities.PaymentOptionsActivity" />
        <activity android:name=".presentation.views.activities.CardPaymentActivity"></activity>
    </application>

</manifest>