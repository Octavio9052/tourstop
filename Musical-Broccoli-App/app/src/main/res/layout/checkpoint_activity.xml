<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="1220dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/newtourcover"/>

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:backgroundTint="#ffffff"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logotourstop" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#0033cc"
            android:elevation="4dp"
            android:paddingBottom="24dp">


            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Checkpoints"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1300dp"
            android:layout_marginTop="328dp"
            android:orientation="vertical">

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker1"
                android:layout_marginTop="36dp"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/textView2" />

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textClock1"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/datePicker1"
                android:layout_alignStart="@+id/datePicker1" />
            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker2"
                android:layout_marginEnd="32dp"
                android:layout_alignTop="@+id/datePicker1"
                android:layout_alignEnd="@+id/button1" />

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textClock11"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/datePicker2"
                android:layout_alignStart="@+id/datePicker2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: *"
                android:id="@+id/textView1"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="110dp"/>

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:hint="  Enter Name"
                android:id="@+id/editText1"
                android:background="@drawable/textfields"
                android:layout_below="@+id/textView1"
                android:layout_alignStart="@+id/textView1"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zipcode:  *"
                android:id="@+id/textView2"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/editText1"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:hint="  Enter Zipcode"
                android:id="@+id/editText2"
                android:background="@drawable/textfields"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street 1:  *"
                android:id="@+id/textView3"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/editText2"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:hint="  Enter Street 1"
                android:id="@+id/editText3"
                android:background="@drawable/textfields"
                android:layout_below="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street 2:"
                android:id="@+id/textView4"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/editText3"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:hint="  Enter Street 2"
                android:id="@+id/editText4"
                android:background="@drawable/textfields"
                android:layout_below="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State:  *"
                android:id="@+id/textView5"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/editText4"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:hint="  Enter State"
                android:id="@+id/editText5"
                android:background="@drawable/textfields"
                android:layout_below="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City:  *"
                android:id="@+id/textView6"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/editText5"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:hint="  Enter City"
                android:id="@+id/editText6"
                android:background="@drawable/textfields"
                android:layout_below="@+id/textView6"
                android:layout_alignStart="@+id/textView6"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contry:  *"
                android:id="@+id/textView7"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/editText6"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:hint="  Enter Country"
                android:id="@+id/editText7"
                android:background="@drawable/textfields"
                android:layout_below="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_marginTop="10dp"/>

            <Button
                android:background="@android:drawable/toast_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textSize="10sp"
                android:textAlignment="center"
                android:id="@+id/button1"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/editText7"
                android:layout_alignEnd="@+id/editText7" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="All fields marked with * are mandatory"
                android:id="@+id/textView8"
                android:textSize="10sp"
                android:textAlignment="center"
                android:layout_marginTop="6dp"
                android:layout_alignTop="@+id/button1"
                android:layout_alignEnd="@+id/textView7" />

            <Button
                android:background="@android:drawable/toast_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="10sp"
                android:textAlignment="center"
                android:id="@+id/button3"
                android:layout_alignTop="@+id/button1"
                android:layout_toStartOf="@+id/textClock11" />


        </RelativeLayout>

    </RelativeLayout>

</ScrollView>