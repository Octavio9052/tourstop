<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.cetys.dreamteam.musicalbroccoli.presentation.viewModels.contracts.CheckpointViewModel"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/newtourcover"/>

            <ImageButton
                android:id="@+id/user_profile_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-60dp"
                android:background="@drawable/profile_circular_border_imageview"
                android:backgroundTint="#ffffff"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logotourstop"/>

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_cover_image"
                android:background="#0033cc"
                android:elevation="4dp"
                android:paddingBottom="24dp">


                <TextView
                    android:id="@+id/user_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="76dp"
                    android:text="Checkpoints"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="328dp"
                android:orientation="vertical">

                <DatePicker
                    android:id="@+id/datePicker1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView2"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="36dp"/>

                <TextClock
                    android:id="@+id/textClock1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/datePicker1"
                    android:layout_below="@+id/datePicker1"
                    android:layout_marginTop="15dp"/>

                <DatePicker
                    android:id="@+id/datePicker2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/button1"
                    android:layout_alignTop="@+id/datePicker1"
                    android:layout_marginEnd="32dp"/>

                <TextClock
                    android:id="@+id/textClock11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/datePicker2"
                    android:layout_below="@+id/datePicker2"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="110dp"
                    android:text="Name: *"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView1"
                    android:layout_below="@+id/textView1"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textfields"
                    android:hint="  Enter Name"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/editText1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="28dp"
                    android:text="Zipcode:  *"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textfields"
                    android:hint="  Enter Zipcode"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/editText2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="28dp"
                    android:text="Street 1:  *"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textfields"
                    android:hint="  Enter Street 1"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/editText3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="28dp"
                    android:text="Street 2:"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/edit_destination_createTour"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView4"
                    android:layout_below="@+id/textView4"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textfields"
                    android:hint="  Enter Street 2"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/edit_destination_createTour"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="28dp"
                    android:text="State:  *"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/edit_stops_creatTour"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView5"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textfields"
                    android:hint="  Enter State"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/edit_stops_creatTour"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="28dp"
                    android:text="City:  *"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/edit_description_createTour"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView6"
                    android:layout_below="@+id/textView6"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textfields"
                    android:hint="  Enter City"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/edit_description_createTour"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="28dp"
                    android:text="Contry:  *"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/edit_seatsAvailable_createTour"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView7"
                    android:layout_below="@+id/textView7"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textfields"
                    android:hint="  Enter Country"/>

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/edit_seatsAvailable_createTour"
                    android:layout_below="@+id/edit_seatsAvailable_createTour"
                    android:layout_marginTop="50dp"
                    android:background="@android:drawable/toast_frame"
                    android:text="Confirm"
                    android:textAlignment="center"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView7"
                    android:layout_alignTop="@+id/button1"
                    android:layout_marginTop="6dp"
                    android:text="All fields marked with * are mandatory"
                    android:textAlignment="center"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/button1"
                    android:layout_toStartOf="@+id/textClock11"
                    android:background="@android:drawable/toast_frame"
                    android:text="Cancel"
                    android:textAlignment="center"
                    android:textSize="10sp"/>


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</layout>