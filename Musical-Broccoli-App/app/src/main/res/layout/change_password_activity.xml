<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="738dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/navigation_header_image" />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:backgroundTint="#ffffff"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logotourstop" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#0033cc"
            android:elevation="4dp"
            android:paddingBottom="24dp">


            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Change Password"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1300dp"
            android:layout_marginTop="328dp"
            android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Password:   *"
            android:id="@+id/textView1"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:layout_width="340dp"
            android:layout_height="35dp"
            android:background="@drawable/textfields"
            android:inputType="textPassword"
            android:hint="  Enter Current Password"
            android:ems="10"
            android:id="@+id/editText1"
            android:layout_below="@+id/textView1"
            android:layout_alignStart="@+id/textView1"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password:   *"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="34dp"
            android:layout_below="@+id/editText1"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="340dp"
            android:layout_height="35dp"
            android:background="@drawable/textfields"
            android:inputType="textPassword"
            android:hint="  Enter New Password"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm New Password:   *"
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="34dp"
            android:layout_below="@+id/editText2"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="340dp"
            android:layout_height="35dp"
            android:background="@drawable/textfields"
            android:inputType="textPassword"
            android:hint="  Enter New Password"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="10dp"/>

        <Button
            android:background="@android:drawable/toast_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:id="@+id/button"
            android:layout_marginTop="54dp"
            android:layout_below="@+id/editText3"
            android:layout_alignEnd="@+id/editText3" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="All fields marked with * are mandatory"
            android:id="@+id/textView4"
            android:textSize="10sp"
            android:textAlignment="center"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_alignTop="@+id/button"
            android:layout_alignStart="@+id/editText3" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>