<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel" type="com.cetys.dreamteam.musicalbroccoli.presentation.viewModels.contracts.ChangePasswordViewModel"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/navigation_header_image" />

            <ImageButton
                android:id="@+id/user_profile_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-60dp"
                android:background="@drawable/profile_circular_border_imageview"
                android:backgroundTint="#ffffff"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logotourstop" />

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_cover_image"
                android:background="#0033cc"
                android:elevation="4dp"
                android:paddingBottom="24dp">


                <TextView
                    android:id="@+id/user_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="76dp"
                    android:text="@string/field_change_password"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="328dp"
                android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/field_current_password"
                android:id="@+id/textView1"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"/>

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:background="@drawable/textfields"
                android:inputType="textPassword"
                android:hint="@string/hint_current_password"
                android:text="@{viewModel.user.password}"
                android:ems="10"
                android:id="@+id/editText1"
                android:layout_below="@+id/textView1"
                android:layout_alignStart="@+id/textView1"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/field_new_password"
                android:id="@+id/textView2"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="34dp"
                android:layout_below="@+id/editText1"
                android:layout_alignParentStart="true" />

                <!-- TODO: New password? -->
            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:background="@drawable/textfields"
                android:inputType="textPassword"
                android:hint="@string/hint_new_password"
                android:ems="10"
                android:id="@+id/firstName_editText"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/field_confirm_new_password"
                android:id="@+id/textView3"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="34dp"
                android:layout_below="@+id/firstName_editText"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:background="@drawable/textfields"
                android:inputType="textPassword"
                android:hint="@string/hint_new_password"
                android:ems="10"
                android:id="@+id/email_editText"
                android:layout_below="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginTop="10dp"/>

            <Button
                android:background="@android:drawable/toast_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_save_changes"
                android:id="@+id/button"
                android:layout_marginTop="54dp"
                android:layout_below="@+id/email_editText"
                android:layout_alignEnd="@+id/email_editText" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/statement_mandatory"
                android:id="@+id/textView4"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_alignTop="@+id/button"
                android:layout_alignStart="@+id/email_editText" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</layout>