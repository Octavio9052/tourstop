<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.cetys.dreamteam.musicalbroccoli.presentation.viewModels.contracts.MainPageViewModel"/>
    </data>
    <RelativeLayout
        android:id="@+id/main_page_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:background="@drawable/background2"
            tools:context="com.cetys.dreamteam.musicalbroccoli.presentation.views.activities.LoginActivity">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="293dp"
                android:layout_height="67dp"
                android:layout_marginTop="45dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_tourstop_text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="60dp">


                <!-- Button: Go to User Profile -->
                <ImageButton
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/userbutton2"
                    android:background="@color/transparent"
                    android:id="@+id/user_button_mainpage"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:onClick="@{viewModel::onUserProfileClick}"/>

                <!-- Button: Go to My Tours -->
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mytoursbutton"
                    android:background="@color/transparent"
                    android:id="@+id/mytours_button_mainpage"
                    android:paddingLeft="8dp"
                    android:paddingTop="10dp"
                    android:layout_alignParentStart="true"
                    android:onClick="@{viewModel::onMyToursClick}"/>

                <!-- Button: Go to Messages -->
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mssgbutton"
                    android:background="@color/transparent"
                    android:id="@+id/msg_button_mainpage"
                    android:paddingTop="55dp"
                    android:layout_below="@+id/user_button_mainpage"
                    android:layout_alignEnd="@+id/mytours_button_mainpage"
                    android:onClick="@{viewModel::onMessagesClick}"/>

                <!-- Button: Go to Search -->
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/searchbutton"
                    android:layout_below="@+id/user_button_mainpage"
                    android:layout_alignStart="@+id/user_button_mainpage"
                    android:layout_marginStart="35dp"
                    android:background="@color/transparent"
                    android:layout_marginTop="30dp"
                    android:id="@+id/search_button_mainpage"
                    android:onClick="@{viewModel::onSearchClick}"/>


            </RelativeLayout>


        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:fabSize="normal"
            android:layout_margin="10dp"
            android:onClick="@{viewModel::onFABClick}"
            android:src="@drawable/ic_add" />

    </RelativeLayout>
</layout>