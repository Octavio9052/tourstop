<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.cetys.dreamteam.musicalbroccoli.presentation.viewModels.contracts.CreateUserViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <!-- Tour Banner -->
            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/cta_header_description"
                android:scaleType="centerCrop"
                android:src="@drawable/navigation_header_image" />

            <ImageButton
                android:id="@+id/user_profile_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-60dp"
                android:background="@drawable/profile_circular_border_imageview"
                android:backgroundTint="#ffffff"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logotourstop" />
            <!-- End Tour Banner -->

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_cover_image"
                android:background="#0033cc"
                android:elevation="4dp"
                android:paddingBottom="24dp">


                <TextView
                    android:id="@+id/user_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="76dp"
                    android:text="Create New User"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <!-- New Tour Data -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="328dp"
                android:orientation="vertical">

                <!--User FirstName-->
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:text="First Name: *"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView1"
                    android:layout_below="@+id/textView1"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/textfields"
                    android:hint="Enter First Name"
                    android:text="@{viewModel.model.firstName}" />

                <!--User LastName-->
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/editText1"
                    android:layout_below="@+id/editText1"
                    android:layout_marginTop="15dp"
                    android:text="Last Name: *"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/textfields"
                    android:hint="Enter Last Name"
                    android:text="@{viewModel.model.lastName}" />

                <!--User Email-->
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/editText2"
                    android:layout_below="@+id/editText2"
                    android:layout_marginTop="15dp"
                    android:text="Email: *"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/textfields"
                    android:hint="Enter Email"
                    android:text="@{viewModel.model.email}" />

                <!--User Password-->
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/editText3"
                    android:layout_below="@+id/editText3"
                    android:layout_marginTop="15dp"
                    android:text="Password: *"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView4"
                    android:layout_below="@+id/textView4"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/textfields"
                    android:hint="Enter Password"
                    android:text="@{viewModel.model.password}" />

                <!--User Phone-->
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/editText4"
                    android:layout_below="@+id/editText4"
                    android:layout_marginTop="15dp"
                    android:text="Phone:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView5"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/textfields"
                    android:hint="Enter Phone"
                    android:text="@{viewModel.model.phone}" />

                <!--User Address Name-->
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/editText5"
                    android:layout_below="@+id/editText5"
                    android:layout_marginTop="15dp"
                    android:text="Name of Address: *"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText6"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView6"
                    android:layout_below="@+id/textView6"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/textfields"
                    android:hint="Enter Name Address"
                    android:text="@{viewModel.model.address.name}" />

                <!--User Address Street1-->
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/editText6"
                    android:layout_below="@+id/editText6"
                    android:layout_marginTop="15dp"
                    android:text="Street 1: *"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText7"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView7"
                    android:layout_below="@+id/textView7"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/textfields"
                    android:hint="Enter Street 1"
                    android:text="@{viewModel.model.address.street1}" />

                <!--User Address Street2-->
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/editText7"
                    android:layout_below="@+id/editText7"
                    android:layout_marginTop="15dp"
                    android:text="Street 2:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText8"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView8"
                    android:layout_below="@+id/textView8"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/textfields"
                    android:hint="Enter Street 2" />

                <!--User Address City-->
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/editText8"
                    android:layout_below="@+id/editText8"
                    android:layout_marginTop="15dp"
                    android:text="City: *"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText9"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView9"
                    android:layout_below="@+id/textView9"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/textfields"
                    android:hint="Enter City"
                    android:text="@{viewModel.model.address.city}" />

                <!--User Address State-->
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/editText9"
                    android:layout_below="@+id/editText9"
                    android:layout_marginTop="15dp"
                    android:text="State: *"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText10"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView10"
                    android:layout_below="@+id/textView10"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/textfields"
                    android:hint="Enter State"
                    android:text="@{viewModel.model.address.state}" />

                <!--Postal Code-->
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/editText10"
                    android:layout_below="@+id/editText10"
                    android:layout_marginTop="15dp"
                    android:text="Postal Code: *"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText11"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView11"
                    android:layout_below="@+id/textView11"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/textfields"
                    android:hint="Enter Zipcode"
                    android:text="@{viewModel.model.address.postalCode}" />

                <!--User Address Country-->
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/editText11"
                    android:layout_below="@+id/editText11"
                    android:layout_marginTop="15dp"
                    android:text="Country Code: *"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner12"
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textView12"
                    android:layout_below="@+id/textView12"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/textfields"
                    android:hint="Enter Country Code"
                    app:items="@{viewModel.countryCodes}" />

                <!--User User Type-->
                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/spinner12"
                    android:layout_below="@+id/spinner12"
                    android:layout_marginTop="15dp"
                    android:text="User Type: *"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radio_group_usertype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView13"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/type_promoter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{viewModel::onRadioButtonClick}"
                        android:text="Promoter"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/type_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{viewModel::onRadioButtonClick}"
                        android:text="User"
                        android:textSize="16sp" />
                </RadioGroup>

                <Button
                    android:id="@+id/saveChanges_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/spinner12"
                    android:layout_below="@+id/radio_group_usertype"
                    android:layout_marginTop="25dp"
                    android:background="@android:drawable/toast_frame"
                    android:onClick="@{viewModel::onSaveChangesClick}"
                    android:text="Create User" />

                <TextView
                    android:id="@+id/tv_annotation"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/saveChanges_button"
                    android:layout_toEndOf="@+id/textView9"
                    android:text="@string/statement_mandatory"
                    android:textAlignment="center"
                    android:textSize="12sp" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</layout>