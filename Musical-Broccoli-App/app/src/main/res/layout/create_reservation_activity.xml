<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <!-- <variable
            name="viewModel"
           type="com.cetys.dreamteam.musicalbroccoli.presentation.viewModels.contracts.MyToursViewModel"/> -->
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/newtourcover"/>

            <ImageButton
                android:id="@+id/user_profile_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-60dp"
                android:background="@drawable/profile_circular_border_imageview"
                android:backgroundTint="#ffffff"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logotourstop"/>

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_cover_image"
                android:background="#0033cc"
                android:elevation="4dp"
                android:paddingBottom="24dp">


                <TextView
                    android:id="@+id/user_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="76dp"
                    android:text="New Reservation"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="328dp"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name: *"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView1"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/editText1"
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/textView1"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="10dp"
                android:background="@drawable/textfields"
                android:hint="Enter User Name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Seats: *"
                android:layout_below="@+id/editText1"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView2"
                android:layout_marginTop="30dp"/>

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:inputType="number"
                android:background="@drawable/textfields"
                android:id="@+id/editText2"
                android:hint="Enter Number of Seats"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="All fields marked with * are mandatory"
                android:textAlignment="center"
                android:textSize="10sp"
                android:layout_alignTop="@+id/button"
                android:layout_alignEnd="@+id/textView1"
                android:layout_marginEnd="21dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText2"
                android:layout_alignEnd="@id/editText2"
                android:layout_marginTop="60dp"
                android:background="@android:drawable/toast_frame"
                android:text="Reserve"
                android:textAlignment="center"
                android:textSize="10sp" />


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</layout>
