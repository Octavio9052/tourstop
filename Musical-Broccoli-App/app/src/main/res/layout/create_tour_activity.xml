<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="1300dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/header_cover_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/newtourcover"/>

    <ImageButton
        android:id="@+id/user_profile_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/header_cover_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-60dp"
        android:background="@drawable/profile_circular_border_imageview"
        android:backgroundTint="#ffffff"
        android:elevation="5dp"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logotourstop" />

    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_cover_image"
        android:background="#0033cc"
        android:elevation="4dp"
        android:paddingBottom="24dp">


        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp"
            android:text="Create New Tour"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1300dp"
            android:layout_marginTop="328dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: *"
                android:id="@+id/textView7"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"/>

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:hint="  Enter Name"
                android:id="@+id/editText2"
                android:background="@drawable/textfields"
                android:layout_below="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: *"
                android:id="@+id/textView8"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/editText2"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:hint="  Enter Price"
                android:id="@+id/editText3"
                android:background="@drawable/textfields"
                android:layout_below="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destiny: *"
                android:id="@+id/textView9"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/editText3"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:hint="  Enter Destiny"
                android:id="@+id/editText4"
                android:background="@drawable/textfields"
                android:layout_below="@+id/textView9"
                android:layout_alignStart="@+id/textView9"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:  *"
                android:id="@+id/textView11"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText4" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:hint="  Enter Description"
                android:id="@+id/editText6"
                android:background="@drawable/textfields"
                android:layout_below="@+id/textView11"
                android:layout_alignStart="@+id/textView9"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seats Available:  *"
                android:id="@+id/textView12"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/editText6"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:hint="  Enter Number of Seats"
                android:id="@+id/editText7"
                android:background="@drawable/textfields"
                android:layout_below="@+id/textView12"
                android:layout_alignStart="@+id/textView9"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promotions:"
                android:id="@+id/textView13"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/editText7"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:hint="  Enter Promotions"
                android:id="@+id/editText8"
                android:background="@drawable/textfields"
                android:layout_below="@+id/textView13"
                android:layout_alignStart="@+id/textView9"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promoter Name:  *"
                android:id="@+id/textView14"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/editText8"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:hint="  Enter Promoter Name"
                android:id="@+id/editText9"
                android:background="@drawable/textfields"
                android:layout_below="@+id/textView14"
                android:layout_alignStart="@+id/textView9"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requirements:  *"
                android:id="@+id/textView15"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/editText9"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:hint="  Enter Requirements"
                android:id="@+id/editText10"
                android:background="@drawable/textfields"
                android:layout_below="@+id/textView15"
                android:layout_alignStart="@+id/textView9"
                android:layout_marginTop="10dp"/>

            <Button
                android:background="@android:drawable/toast_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Tour"
                android:id="@+id/button1"
                android:layout_marginTop="119dp"
                android:layout_below="@+id/editText10"
                android:layout_alignEnd="@+id/editText10" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="All fields marked with * are mandatory"
                android:id="@+id/textView16"
                android:textSize="10sp"
                android:textAlignment="center"
                android:layout_alignBottom="@+id/button1"
                android:layout_alignEnd="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Assign Checkpoints"
                android:textColor="@color/darkblue"
                android:id="@+id/textView17"
                android:layout_marginTop="51dp"
                android:layout_below="@+id/editText10"
                android:layout_alignStart="@+id/textView16" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
