<?xml version="1.0" encoding="utf-8"?>


<!-- WTF with these values
name = title
price = pricePerReservation
destination = ????
stops = ???
description = String
seats available = maxReservations
promotions =
promoter name =
enter requirements = -->

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="tour" type="com.cetys.dreamteam.musicalbroccoli.presentation.models.TourModel"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Tour Banner -->
        <ImageView
            android:contentDescription="@string/cta_header_description"
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/newtourcover"/>

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:backgroundTint="#ffffff"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logotourstop" />
            <!-- End Tour Banner -->

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#0033cc"
            android:elevation="4dp"
            android:paddingBottom="24dp">


            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="@string/action_create_new_tour"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            </RelativeLayout>

            <!-- New Tour Data -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="328dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_name"
                    android:id="@+id/textView7"
                    android:textSize="20sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"/>

                <!-- Name of tour -->
                <EditText
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:hint="@string/hint_enter_name"
                    android:text="@{tour.title}"
                    android:id="@+id/editText2"
                    android:background="@drawable/textfields"
                    android:layout_below="@+id/textView7"
                    android:layout_alignStart="@+id/textView7"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_price"
                    android:id="@+id/textView8"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:layout_below="@+id/editText2"
                    android:layout_alignParentStart="true" />

                <!-- Price of tour (per Reservation)-->
                <EditText
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:hint="@string/hint_price"
                    android:text="@{Float.toString(tour.pricePerReservation)}"
                    android:id="@+id/editText3"
                    android:background="@drawable/textfields"
                    android:layout_below="@+id/textView8"
                    android:layout_alignStart="@+id/textView8"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_destination"
                    android:id="@+id/textView9"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:layout_below="@+id/editText3"
                    android:layout_alignParentStart="true" />

                <!-- Destination of tour -->
                <EditText
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:hint="@string/hint_destination"
                    android:id="@+id/editText4"
                    android:background="@drawable/textfields"
                    android:layout_below="@+id/textView9"
                    android:layout_alignStart="@+id/textView9"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_stops"
                    android:id="@+id/textView10"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:layout_below="@+id/editText4"
                    android:layout_alignParentStart="true" />

                <!-- Stops? of tour -->
                <EditText
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:hint="@string/hint_stops"
                    android:id="@+id/editText5"
                    android:background="@drawable/textfields"
                    android:layout_below="@+id/textView10"
                    android:layout_alignStart="@+id/textView9"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_description"
                    android:id="@+id/textView11"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:layout_below="@+id/editText5"
                    android:layout_alignParentStart="true" />

                <!-- Description? of tour -->
                <EditText
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:hint="@string/hint_description"
                    android:id="@+id/editText6"
                    android:background="@drawable/textfields"
                    android:layout_below="@+id/textView11"
                    android:layout_alignStart="@+id/textView9"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_max_seats"
                    android:id="@+id/textView12"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:layout_below="@+id/editText6"
                    android:layout_alignParentStart="true" />

                <!-- Seats available for the tour -->
                <EditText
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:hint="@string/hint_max_seats"
                    android:text="@{tour.maxReservations}"
                    android:id="@+id/editText7"
                    android:background="@drawable/textfields"
                    android:layout_below="@+id/textView12"
                    android:layout_alignStart="@+id/textView9"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_promotion"
                    android:id="@+id/textView13"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:layout_below="@+id/editText7"
                    android:layout_alignParentStart="true" />

                <!-- Promotions of tour -->
                <EditText
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:hint="@string/hint_promotion"
                    android:id="@+id/editText8"
                    android:background="@drawable/textfields"
                    android:layout_below="@+id/textView13"
                    android:layout_alignStart="@+id/textView9"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_promoter_name"
                    android:id="@+id/textView14"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:layout_below="@+id/editText8"
                    android:layout_alignParentStart="true" />

                <!-- Promoter name of tour -->
                <EditText
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:hint="@string/hint_promoter_name"
                    android:id="@+id/editText9"
                    android:background="@drawable/textfields"
                    android:layout_below="@+id/textView14"
                    android:layout_alignStart="@+id/textView9"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field_requirements"
                    android:id="@+id/textView15"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:layout_below="@+id/editText9"
                    android:layout_alignParentStart="true" />

                <!-- Requirements? of tour -->
                <EditText
                    android:layout_width="340dp"
                    android:layout_height="35dp"
                    android:hint="@string/hint_requirements"
                    android:id="@+id/editText10"
                    android:background="@drawable/textfields"
                    android:layout_below="@+id/textView15"
                    android:layout_alignStart="@+id/textView9"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:background="@android:drawable/toast_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_create_new_tour"
                    android:id="@+id/button2"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/editText10"
                    android:layout_alignEnd="@+id/editText10" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/statement_mandatory"
                    android:id="@+id/textView16"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginTop="6dp"
                    android:layout_alignTop="@+id/button2"
                    android:layout_alignEnd="@+id/textView13" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</layout>