<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/navigation_header_image" />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:backgroundTint="#ffffff"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logotourstop" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#0033cc"
            android:elevation="4dp"
            android:paddingBottom="24dp">


            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="@string/field_username"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="160dp"
                android:layout_height="175dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="15dp"
                android:text="@string/action_edit_profile"
                android:textSize="20sp"
                android:textAlignment="center"
                android:id="@+id/textView"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="18dp" />

            <TextView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="15dp"
                android:text="@string/my_tours"
                android:textSize="20sp"
                android:textAlignment="center"
                android:id="@+id/textView2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_above="@+id/textView3"
                android:layout_toEndOf="@+id/textView" />

            <TextView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="15dp"
                android:text="@string/wishlist"
                android:textSize="20sp"
                android:textAlignment="center"
                android:id="@+id/textView3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/textView"
                android:layout_toStartOf="@+id/textView4"
                android:layout_marginTop="17dp" />

            <TextView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="15dp"
                android:text="@string/messages"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/textView4"
                android:layout_alignTop="@+id/textView3"
                android:layout_toEndOf="@+id/textView" />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>