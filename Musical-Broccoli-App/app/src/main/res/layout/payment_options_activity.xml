<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.cetys.dreamteam.musicalbroccoli.presentation.viewModels.contracts.PaymentOptionsViewModel"/>
    </data>

    <RelativeLayout
        android:id="@+id/payment_options_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"

        tools:context="com.cetys.dreamteam.musicalbroccoli.presentation.views.activities.PaymentOptionsActivity">


        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bluecolor"/>


        <TextView
            android:id="@+id/payment_option_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:text="How would you like to pay?"
            android:textColor="#003399"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/creditCardPaymentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/payment_option_tag"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            android:onClick="goToCardPaymentActivity"
            android:text="Credit card"
            />

        <RadioButton
            android:id="@+id/promoterPaymentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@+id/creditCardPaymentButton"
            android:layout_below="@+id/creditCardPaymentButton"
            android:layout_marginStart="8dp"
            android:layout_marginTop="22dp"
            android:text="Directly with promoter"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/promoterPaymentButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp"
            android:background="@drawable/button_round_format"
            android:gravity="center"
            android:onClick="doTemporalToastThing"
            android:text="Proceed"/>

    </RelativeLayout>
</layout>